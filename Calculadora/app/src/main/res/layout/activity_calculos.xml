<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#EB1010"
    tools:context=".CalculosActivity">

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="35dp"
        android:text="Resultado"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/txtResultadoSuma"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="43dp"
        android:text="Suma"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtResultadoResta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultado"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Resta"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtSuma"
        app:layout_constraintTop_toBottomOf="@+id/txtSuma"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtMultiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Multiplicación"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtResta"
        app:layout_constraintTop_toBottomOf="@+id/txtResta"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="División"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txtMultiplicacion"
        app:layout_constraintTop_toBottomOf="@+id/txtMultiplicacion"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="#CC1B1B"
        android:onClick="Volver"
        android:text="Atras"
        app:layout_constraintEnd_toStartOf="@+id/txtResultadoDivision"
        app:layout_constraintTop_toBottomOf="@+id/txtResultadoDivision"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtResultadoSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txtResultadoResta"
        app:layout_constraintEnd_toEndOf="@+id/txtResultadoResta"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtResultadoResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txtResultadoMultiplicacion"
        app:layout_constraintStart_toStartOf="@+id/txtResultadoMultiplicacion"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtResultadoMultiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="26dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txtResultadoDivision"
        app:layout_constraintEnd_toEndOf="@+id/txtResultadoDivision"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtResultadoDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="91dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtMultiplicacion"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>